{% extends 'base.html.twig' %}

{% block title %}
	{% if app.user %}
		{{ refuge.name }}
		- Détail du refuge
	{% else %}
		{{ refuge.name }}
		- Accès refusé
	{% endif %}
{% endblock %}

{% block body %}
    <h1>Refuge</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ refuge.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ refuge.name }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ refuge.street }}</td>
            </tr>
            <tr>
                <th>PostalCode</th>
                <td>{{ refuge.postalCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ refuge.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ refuge.country }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_refuge_index') }}">back to list</a>

    <a href="{{ path('app_refuge_edit', {'id': refuge.id}) }}">edit</a>

    {{ include('refuge/_delete_form.html.twig') }}
{% endblock %}
