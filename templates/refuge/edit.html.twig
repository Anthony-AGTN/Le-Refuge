{% extends 'base.html.twig' %}

{% block title %}
    {% if is_granted('ROLE_ADMIN') %}
        {{ refuge.name }}
        - Modification du refuge
    {% else %}
        {{ refuge.name }}
        - Accès refusé
    {% endif %}
{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="container text-center">
            <h1>Modifier les informations du refuge "{{ refuge.name }}"</h1>
        </div>
        <div class="container text-center bg-content mt-4">
            <div class="row justify-content-md-center">
                <div class="col col-lg-6">
                    {{ include('refuge/_form.html.twig', {'button_label': 'Modifier'}) }}
                    <div class="mt-4">
                        <a href="{{ path('app_index') }}">Retour à la page d'accueil</a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="container text-center">
            <img class="mt-4" src="{{ asset('build/images/apple-touch-icon.png') }}" alt="Logo le refuge"/>
            <h1>Accès refusé</h1>
        </div>
        <div class="container text-center bg-content mt-4">
            <div class="row justify-content-md-center">
                <div class="col col-lg-6">
                    <div class="alert alert-danger" role="alert">
                        Vous n'avez pas l'autorisation d'accéder à cette page !
                    </div>
                    <a href="{{ path('app_index') }}">Retour à la page d'accueil</a>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
