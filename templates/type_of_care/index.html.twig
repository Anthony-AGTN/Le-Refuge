{% extends 'base.html.twig' %}

{% block title %}TypeOfCare index{% endblock %}

{% block body %}
    <h1>TypeOfCare index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_of_care in type_of_cares %}
            <tr>
                <td>{{ type_of_care.id }}</td>
                <td>{{ type_of_care.name }}</td>
                <td>
                    <a href="{{ path('app_type_of_care_show', {'id': type_of_care.id}) }}">show</a>
