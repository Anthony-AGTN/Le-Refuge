{% extends 'base.html.twig' %}

{% block title %}
    {% if app.user %}
        {{ refuge.name }}
        - Ajouter un soin
    {% else %}
        {{ refuge.name }}
        - Accès refusé
    {% endif %}
{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="container text-center">
            <h1>Ajouter un soin</h1>
        </div>
        <div class="container text-center bg-content my-4">
            <div class="row justify-content-md-center">
                <div class="col col-lg-6">
                    {{ include('care/_form.html.twig') }}
                    <div class="m-4">
                        <a href="{{ path('app_care_index') }}">Retour à la liste des soins</a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        {% include "component/alert.html.twig" with {
            'alert_title': "Accès refusé",
            'alert_color': "danger",
            'alert_text': "Vous n'avez pas l'autorisation d'accéder à cette page !",
            'alert_redirect_link': path('app_index'),
            'alert_redirect_link_text': "Retour à la page d'accueil",
        } %}
    {% endif %}
{% endblock %}
