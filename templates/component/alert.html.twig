<div class="container text-center">
    <h1>{{ alert_title }}</h1>
</div>
<div class="container text-center bg-content mt-4">
    <div class="row justify-content-md-center">
        <div class="col col-lg-6">
            <div class="alert alert-{{ alert_color }}" role="alert">
                {{ alert_text }}
            </div>
            {% if alert_redirect_link %}
                <a href="{{ alert_redirect_link }}">{{ alert_redirect_link_text }}</a>
            {% endif %}
        </div>
    </div>
</div>
