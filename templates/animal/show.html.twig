{% extends 'base.html.twig' %}

{% block title %}Animal
{% endblock %}

{% block body %}
	<div class="container text-center welcome-container">
		<img class="mt-4" src="{{ asset('build/images/apple-touch-icon.png') }}" alt="Logo le refuge"/>
		<h1 class="mt-4">{{ animal.name }}</h1>
	</div>

	<div class="container text-center bg-content mt-4">
		<div class="row justify-content-md-center">
			<div class="col col-lg-6">

				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ animal.id }}</td>
						</tr>
						<tr>
							<th>Name</th>
							<td>{{ animal.name }}</td>
						</tr>
						<tr>
							<th>LatinName</th>
							<td>{{ animal.latinName }}</td>
						</tr>
						<tr>
							<th>VernacularName</th>
							<td>{{ animal.vernacularName }}</td>
						</tr>
						<tr>
							<th>ArrivalDate</th>
							<td>{{ animal.arrivalDate ? animal.arrivalDate|date('Y-m-d') : '' }}</td>
						</tr>
						<tr>
							<th>DepartureDate</th>
							<td>{{ animal.departureDate ? animal.departureDate|date('Y-m-d') : '' }}</td>
						</tr>
						<tr>
							<th>Comment</th>
							<td>{{ animal.comment }}</td>
						</tr>
						<tr>
							<th>Photo</th>
							<td>{{ animal.photo }}</td>
						</tr>
					</tbody>
				</table>

				<a href="{{ path('app_animal_index') }}">back to list</a>

				<a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>

				{{ include('animal/_delete_form.html.twig') }}

			</div>
		</div>
	</div>
{% endblock %}
